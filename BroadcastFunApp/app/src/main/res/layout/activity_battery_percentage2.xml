<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BatteryPercentageActivity2"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_guess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#e77566"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_guess_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#e55344">
                <TextView
                    android:id="@+id/text_view_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="italic|bold"
                    android:text="YOUR GUESS"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text_view_battery_guess"
                android:layout_below="@id/card_view_guess_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="100%"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_battery_percent"
        android:layout_below="@id/card_view_guess"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#ff7722"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_battery_percentage_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#dd6611">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:text="BATTERY STATUS"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text_view_battery_percentage"
                android:layout_below="@id/card_view_battery_percentage_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="999%"/>
            <TextView
                android:id="@+id/text_view_battery_status"
                android:layout_marginVertical="3dp"
                android:layout_below="@id/text_view_battery_percentage"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Charging"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
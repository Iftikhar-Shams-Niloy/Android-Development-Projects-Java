<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/image_view_project_icon"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/text_view_title"
            android:layout_toRightOf="@id/image_view_project_icon"
            android:layout_alignTop="@id/image_view_project_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="THE APP TITLE" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_below="@id/text_view_title"
            android:layout_toEndOf="@id/image_view_project_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="This is app Description!"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
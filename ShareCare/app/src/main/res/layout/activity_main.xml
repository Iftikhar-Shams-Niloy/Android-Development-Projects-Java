<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFADAD"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="42sp"
            android:textAlignment="center"
            android:layout_marginVertical="10dp"
            android:fontFamily="sans-serif-black"
            android:textColor="#FF5768"
            android:text="Share and Care" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_name"
            android:layout_centerHorizontal="true"
            app:cardUseCompatPadding="true"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#FFD6A5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center_horizontal"
                    android:text="FOOD SECTION"
                    android:textColor="#FFA23A"
                    android:textSize="30sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_starters"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_view_name"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="25dp"
                    app:cardBackgroundColor="#FDFFB6"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sandwich" />

                        <TextView
                            android:id="@+id/text_view_starters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Starters"
                            android:textColor="#FFBF65"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_main_course"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_view_starters"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="25dp"
                    app:cardBackgroundColor="#FDFFB6"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sandwich" />
                        <TextView
                            android:id="@+id/text_view_main_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Main Course"
                            android:textColor="#FFBF65"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_disert"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_view_starters"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="25dp"
                    app:cardBackgroundColor="#FDFFB6"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cake" />
                        <TextView
                            android:id="@+id/text_view_disert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="#FFBF65"
                            android:textSize="20sp"
                            android:text="Disert"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_beverage"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card_view_starters"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="25dp"
                    app:cardBackgroundColor="#FDFFB6"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/drinks" />
                        <TextView
                            android:id="@+id/text_view_beverage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="#FFBF65"
                            android:textSize="20sp"
                            android:text="Beverage"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>